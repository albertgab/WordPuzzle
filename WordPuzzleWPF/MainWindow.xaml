<Window x:Class="WordPuzzleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordPuzzleWPF"
        mc:Ignorable="d"
        Background="#bdd2b6"
        Title="MainWindow" Height="798" Width="1006">
    <Grid>
        <Grid Name="lvl" Visibility="Visible" Margin="10,10,0,0">

            <ListBox x:Name="listOfLevels" Background="#f8ede3" SelectionChanged="listOfLevels_SelectionChanged" Margin="0,11,751,0" Height="728" VerticalAlignment="Top" />

            <StackPanel x:Name="stackLvl" Margin="265,39,0,0" RenderTransformOrigin="0.5,0.5" Width="700" Height="700" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left"></StackPanel>
            <TextBlock x:Name="textBlockTimer" HorizontalAlignment="Left" Margin="265,10,0,0" Text="Time: 00:00" TextWrapping="Wrap" VerticalAlignment="Top" Width="64"/>
            <Button x:Name="buttonUsername" HorizontalAlignment="Left" Margin="869,8,0,0" Content="Username" VerticalAlignment="Top" Width="96" Click="textBlockUsername_Click" />
            <Button x:Name="buttonLogout" Content="Logout" HorizontalAlignment="Left" Margin="770,8,0,0" VerticalAlignment="Top" Width="67" Click="buttonLogout_Click"/>
            <Button x:Name="buttonLeaderboard" Content="Leaderboard" HorizontalAlignment="Left" Margin="489,8,0,0" VerticalAlignment="Top" Width="82" Click="buttonLeaderboard_Click"/>
            <TextBlock x:Name="textBlockLeft" HorizontalAlignment="Left" Margin="353,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Height="15.96"><Run Language="pl-pl"/></TextBlock>
        </Grid>
    </Grid>
</Window>
