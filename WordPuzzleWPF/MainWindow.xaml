<Window x:Class="WordPuzzleWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordPuzzleWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle />
        <Button x:Name="button" Content="Log In" HorizontalAlignment="Center" Margin="0,315,0,0" VerticalAlignment="Top" Height="39" Width="120" Click="buttonLogin_Clicked"/>
        <TextBox x:Name="textBoxUsername" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="18"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,244,0,0" Height="18"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="270,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="18" Width="56" TextAlignment="Right"><Run Text="Username"/><Run Text=":" FlowDirection="RightToLeft"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="270,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="56" TextAlignment="Right"><Run Text="Password:"/></TextBlock>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,131,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="43" Width="278" TextAlignment="Center"/>
        <Grid Name="lvl" Visibility="Visible" Margin="10,10,0,0">
            <Rectangle Fill="White" />
            <ListBox x:Name="listOfLevels" SelectionChanged="listOfLevels_SelectionChanged" Margin="10,10,414,10" />

            <StackPanel x:Name="stackLvl" Margin="376,10,10,10" RenderTransformOrigin="0.5,0.5" Width="400" Height="400" Orientation="Vertical">
