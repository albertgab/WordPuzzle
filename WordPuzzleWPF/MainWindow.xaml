            <!--<StackPanel Name ="stk" Orientation="Vertical" Visibility="Visible">
                <ListBox x:Name="listOfLevels" Height="375" Width="456" SelectionChanged="listOfLevels_SelectionChanged"/>
            </StackPanel>-->
        </Grid>




